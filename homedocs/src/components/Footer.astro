  <div class="container mx-auto px-4 py-12">
    <div class="flex flex-col lg:flex-row gap-12 lg:gap-32">
      <!-- Brand section -->
      <div class="lg:max-w-xs">
        <a href="https://codaxy.com" class="inline-block hover:opacity-80 transition-opacity mb-4">
          <img src="/codaxy-logo.svg" alt="Codaxy" class="h-14" />
        </a>
        <p class="text-sm text-muted-foreground">
          &copy; {new Date().getFullYear()} Codaxy d.o.o. All rights reserved.
        </p>
      </div>

      <!-- Categories -->
      <div class="flex-1 grid grid-cols-2 sm:grid-cols-4 gap-8">
        <!-- Resources -->
        <div>
          <h3 class="font-semibold text-heading mb-4">Resources</h3>
          <ul class="space-y-3 text-sm text-muted-foreground">
            <li>
              <a href="/docs/intro/what-is-cxjs" class="hover:text-foreground transition-colors">Documentation</a>
            </li>
            <li>
              <a href="/docs/intro/sample-applications" class="hover:text-foreground transition-colors">Sample Applications</a>
            </li>
            <li>
              <a href="https://github.com/codaxy/cxjs" class="hover:text-foreground transition-colors">GitHub</a>
            </li>
          </ul>
        </div>

        <!-- Legacy -->
        <div>
          <h3 class="font-semibold text-heading mb-4">Legacy</h3>
          <ul class="space-y-3 text-sm text-muted-foreground">
            <li>
              <a href="https://docs.cxjs.io" class="hover:text-foreground transition-colors">Documentation</a>
            </li>
            <li>
              <a href="https://fiddle.cxjs.io" class="hover:text-foreground transition-colors">Fiddle</a>
            </li>
            <li>
              <a href="https://gallery.cxjs.io" class="hover:text-foreground transition-colors">Gallery</a>
            </li>
          </ul>
        </div>

        <!-- About -->
        <div>
          <h3 class="font-semibold text-heading mb-4">About</h3>
          <ul class="space-y-3 text-sm text-muted-foreground">
            <li>
              <a href="https://codaxy.com" class="hover:text-foreground transition-colors">Codaxy</a>
            </li>
            <li>
              <a href="https://codaxy.com/blog" class="hover:text-foreground transition-colors">Blog</a>
            </li>
            <li>
              <a href="https://codaxy.com/contact" class="hover:text-foreground transition-colors">Contact</a>
            </li>
          </ul>
        </div>

        <!-- Legal -->
        <div>
          <h3 class="font-semibold text-heading mb-4">Legal</h3>
          <ul class="space-y-3 text-sm text-muted-foreground">
            <li>
              <a href="https://github.com/codaxy/cxjs/blob/master/LICENSE.md" class="hover:text-foreground transition-colors">License</a>
            </li>
            <li>
              <a href="/privacy-policy" class="hover:text-foreground transition-colors">Privacy Policy</a>
            </li>
            <li>
              <a href="/cookie-policy" class="hover:text-foreground transition-colors">Cookie Policy</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
