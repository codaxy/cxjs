---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import PageNav from '../components/PageNav.astro';

interface Props {
  frontmatter?: {
    title?: string;
    description?: string;
  };
  title?: string;
  description?: string;
}

const { frontmatter, title: directTitle, description: directDescription } = Astro.props;
const title = frontmatter?.title || directTitle || '';
const description = frontmatter?.description || directDescription || '';
---

<BaseLayout title={`${title} - CxJS Documentation`} description={description}>
    <div class="min-h-screen bg-background">
      <!-- Scroll progress indicator -->
      <div id="scroll-progress" class="fixed top-14 left-0 h-0.5 bg-gradient-to-r from-primary to-primary/70 w-0 z-50 transition-all duration-100"></div>

      <Header />

      <div class="flex">
        <Sidebar />

        <main id="main-content" class="flex-1 lg:pl-72 pt-14 min-h-screen overflow-x-hidden">
          <div class="max-w-3xl xl:mr-80 2xl:mr-96 px-6 lg:px-12 py-8 pb-16 relative">
            <article class="prose max-w-none" data-pagefind-body>
              <slot />
              <PageNav />
            </article>
          </div>
        </main>
      </div>
    </div>

    <script>
      function initPage() {
        const main = document.getElementById('main-content');
        const progressBar = document.getElementById('scroll-progress');

        if (progressBar) {
          window.scrollTo(0, 0);
          progressBar.style.width = '0%';

          window.addEventListener('scroll', () => {
            const scrollTop = window.scrollY;
            const scrollHeight = document.documentElement.scrollHeight - window.innerHeight;
            const progress = scrollHeight > 0 ? (scrollTop / scrollHeight) * 100 : 0;
            progressBar.style.width = `${progress}%`;
          });
        }

        // Add anchor links to headings
        document.querySelectorAll('.prose h2, .prose h3').forEach(heading => {
          if (!heading.id) {
            heading.id = heading.textContent?.toLowerCase().replace(/\s+/g, '-').replace(/[^\w-]/g, '') || '';
          }

          if (!heading.querySelector('.heading-anchor')) {
            const anchor = document.createElement('a');
            anchor.href = `#${heading.id}`;
            anchor.className = 'heading-anchor';
            anchor.innerHTML = '#';
            heading.appendChild(anchor);
          }
        });
      }

      document.addEventListener('astro:page-load', initPage);
    </script>
  </body>
</html>
